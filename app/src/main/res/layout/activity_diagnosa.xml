            android:text="@string/gigi_kuning_karena_nikotin" />

        <CheckBox
            android:id="@+id/cb_kuku_kotor_karena_nikotin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kuku_kotor_karena_nikotin" />

        <CheckBox
            android:id="@+id/cb_mata_pedih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mata_pedih" />

        <CheckBox
            android:id="@+id/cb_sering_batuk_batuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sering_batuk_batuk" />

        <CheckBox
            android:id="@+id/cb_mulut_dan_nafas_bau_rokok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mulut_dan_nafas_bau_rokok" />

        <CheckBox
            android:id="@+id/cb_tidak_peka_terhadap_perasaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tidak_peka_terhadap_perasaan_orang_lain" />

        <CheckBox
            android:id="@+id/cb_memiliki_perasaan_rendah_diri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/memiliki_perasaan_rendah_diri_yang_kuat" />

        <CheckBox
            android:id="@+id/cb_emosi_tidak_stabil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emosi_yang_tidak_stabil" />

        <CheckBox
            android:id="@+id/cb_mudah_frustasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mudah_frustasi" />

        <CheckBox
            android:id="@+id/cb_rumah_tangga_penuh_kekerasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rumah_tangga_penuh_kekerasan" />

        <CheckBox
            android:id="@+id/cb_orang_tua_posesif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orang_tua_terlalu_posesif_melindungi_anaknya" />

        <CheckBox
            android:id="@+id/cb_mempunyai_hobi_kebutan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mempunyai_hobi_yang_sama_yaitu_kebut_kebutan_di_jalan" />

        <CheckBox
            android:id="@+id/cb_kurang_harmonisnya_hubungan_individu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kurang_harmonisnya_hubungan_individu_remaja_dengan_lingkungan_sekitarnya" />

        <CheckBox
            android:id="@+id/cb_orang_tua_tidak_dapat_membangun_komunikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orang_tua_tidak_dapat_membangun_komunikasi_kepada_anak_dengan_baik" />

        <CheckBox
            android:id="@+id/cb_terbiasa_menggunakan_kekerasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terbiasa_menggunakan_kekerasan_untuk_membangun_identitas_diri" />

        <CheckBox
            android:id="@+id/cb_sering_membolos_sekolah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sering_membolos_sekolah" />

        <CheckBox
            android:id="@+id/cb_ketergantungan_kepada_teman_sebaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ketergantungan_kepada_teman_sebaya_yang_tinggi" />

        <CheckBox
            android:id="@+id/cb_sering_bersama_teman_sebaya_keluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sering_bersama_teman_sebaya_keluar_rumah" />

        <Button
            android:id="@+id/btn_diagnosa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:text="@string/diagnosa" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>