<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".DiagnosaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diagnosa_kenakalan"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/cb_mata_merah_pupil_mengecil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mata_merah_dan_pupil_yang_mengecil_atau_membesar" />

        <CheckBox
            android:id="@+id/cb_mengalami_perubahan_pola_makan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mengalami_perubahan_pola_makan_atau_pola_tidur" />

        <CheckBox
            android:id="@+id/cb_penurunan_berat_badan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/penurunan_berat_badan_atau_penambahan_berat_badan_dalam_kurun_waktu_yang_singkat" />

        <CheckBox
            android:id="@+id/cb_mengucapkan_kata_yang_membingungkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mengucapkan_kata_kata_membingungkan_atau_sulit_dimengerti" />

        <CheckBox
            android:id="@+id/cb_menjadi_lebih_tertutup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menjadi_lebih_tertutup_dan_terlihat_seperti_merahasiakan_sesuatu" />

        <CheckBox
            android:id="@+id/cb_berkurangnya_minat_terhadap_hal_disukai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/berkurangnya_minat_terhadap_hal_hal_yang_disukai_sebelumnya" />

        <CheckBox
            android:id="@+id/cb_tidak_memiliki_motivasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tidak_memiliki_motivasi_tidak_fokus_dan_tampak_lesu" />

        <CheckBox
            android:id="@+id/cb_menarik_diri_cemas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menarik_diri_cemas_dan_paranoid" />

        <CheckBox
            android:id="@+id/cb_sering_bolos_sekolah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sering_bolos_sekolah_dan_nilai_nilai_pelajarannya_menurun" />

        <CheckBox
            android:id="@+id/cb_mencuri_atau_menjual_barang_yang_ada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mencuri_atau_menjual_barang_barang_yang_ada_untuk_membeli_narkoba" />

        <CheckBox
            android:id="@+id/cb_takut_tersingkirkan_atau_tidak_dianggap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/takut_tersingkirkan_atau_tidak_dianggap_dalam_pergaulan_dengan_sesama_remaja" />

        <CheckBox
            android:id="@+id/cb_ingin_menyalurkan_hobi_minat_bakat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingin_menyalurkan_hobi_minat_bakat_bermotor" />

        <CheckBox
            android:id="@+id/cb_ingin_mendapatkan_sensasi_balap_liar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingin_mendapatkan_sensasi_balap_liar_sehingga_memacu_adrenalin" />

        <CheckBox
            android:id="@+id/cb_banyak_melihat_tanyangan_di_televisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/banyak_melihat_tayangan_di_televisi_sehingga_ingin_meniru" />

        <CheckBox
            android:id="@+id/cb_lebih_menuruti_ego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lebih_menuruti_ego_daripada_keselamatan_diri" />

        <CheckBox
            android:id="@+id/cb_diawali_dengan_rasa_iseng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
