        <CheckBox
            android:id="@+id/cb_akibat_impitan_ekonomi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/akibat_impitan_ekonomi" />

        <CheckBox
            android:id="@+id/cb_terbiasa_mendapatkan_uang_banyak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terbiasa_mendapatkan_uang_banyak_dengan_jalan_pintas" />

        <CheckBox
            android:id="@+id/cb_kurangnya_iman_dan_pendidikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kurangnya_iman_dan_pendidikan_agama_di_keluarga" />

        <CheckBox
            android:id="@+id/cb_tidak_mendapatkan_pekerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tidak_mendapatkan_pekerjaan_sehingga_melakukan_pencurian_untuk_memenuhi_kebutuhan" />

        <CheckBox
            android:id="@+id/cb_adanya_kesempatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adanya_kesempatan" />

        <CheckBox
            android:id="@+id/cb_memiliki_rasa_ingin_tahu_besar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/memiliki_rasa_ingin_tahu_yang_besar" />

        <CheckBox
            android:id="@+id/cb_tidak_mendapatkan_pendidikan_kesehatan_reproduksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tidak_mendapatkan_pendidikan_kesehatan_reproduksi" />

        <CheckBox
